<Window x:Class="DepoEnvanterApp.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Envanter Kontrol" Height="380" Width="350" WindowStartupLocation="CenterScreen">
    <Grid Background="#F0F2F5">
        <StackPanel VerticalAlignment="Top" Margin="30,20,30,20">
            <TextBlock Text="DEPO YÖNETİMİ" FontSize="22" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>

            <TextBlock Text="Kullanıcı Adı:"/>
            <TextBox x:Name="txtUser" Margin="0,5,0,15" Padding="5"/>

            <TextBlock Text="Şifre:"/>
            <PasswordBox x:Name="txtPass" Margin="0,5,0,20" Padding="5"/>

            <Button Content="Giriş Yap" Click="Login_Click" Height="35" Background="#2196F3" Foreground="White" FontWeight="Bold" Margin="0,0,0,10"/>

            <Button Content="Kayıt Ol" Click="Register_Click" Height="35" Background="#757575" Foreground="White" FontWeight="Bold"/>

            <TextBlock x:Name="lblDurum" Foreground="Red" HorizontalAlignment="Center" Margin="0,15,0,0" TextWrapping="Wrap"/>
        </StackPanel>
    </Grid>
</Window>